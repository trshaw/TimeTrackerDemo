@model TimeTracker.Models.Employee
@{
    ViewBag.Title = "Index";
}
<script language="javascript">
    function display() {
        if ($("#txtemail").attr("value") == "") {
            alert("Please Enter your Email.");
            return false;
        } 
        alert("Login Successful");
        return true;
    }
</script>
<h3>Simple Web API Login Form </h3>
@using (Html.BeginForm("Index", "Home"))
{
    <table cellpadding="1" cellspacing="5">
        <tr>
            <td colspan="2" style="color:#f00;font-size:larger">@ViewBag.Status</td>
        </tr>
        <tr>
            <td align="right">User Name :</td>
            <td>@Html.TextBoxFor(m => m.Email, new { @style = "width:200px", @id = "txtemail" })</td>
        </tr>
         <tr>
            <td colspan="2">
                <input type="submit" value="Login" title="login" onclick=" display();" />
            </td>
        </tr>
    </table>
}
